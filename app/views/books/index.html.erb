<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
      <th>
        <h4>本のタイトル</h4>
      </th>
      <th>
        <h4>感想</h4>
      </th>
      <th></th>
    </tr>
  </thead>

 <tbody>
   
  <% @newbooks.each do |n| %>
  
   <td>
    <span><%= n.title %></span>
   </td>
   
   <td>
    <span><%= n.body %></span>
   </td>
   
   <td>
    <%= link_to 'Show', 'books/show' %>
   </td>
   
   <td>
    <%= link_to 'Edit', 'books/edit' %>
   </td>
   
   <td>
    <%= link_to 'Destroy', 'books' %>
   </td>
   
  <% end %>
  
 </tbody>
 
</table>


<h2>New book</h2>

<%= form_with model: @newbook do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  
  <h4>感想</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
