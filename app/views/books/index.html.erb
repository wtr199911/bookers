<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
      <th>
        <h4>本のタイトル</h4>
      </th>
      <th>
        <h4>感想</h4>
      </th>
      <th></th>
    </tr>
  </thead>

 <tbody>

  <% @newbooks.each do |n| %>

   <td>
    <span><%= n.title %></span>
   </td>

   <td>
    <span><%= n.body %></span>
   </td>

   <td>
    <%= link_to 'Show', book_path(n.id) %>
   </td>

   <td>
    <%= link_to 'Edit', edit_book_path(n.id) %>
   </td>

   <td>
    <%= link_to 'Destroy', book_path(n.id), method: :delete %>
   </td>

  <% end %>

 </tbody>

</table>


<h2>New book</h2>

<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーを発見しました
  
  <ul>
   <%= book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<%= form_with model: Book do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
