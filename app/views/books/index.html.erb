<p id="notice">
 <%= flash.now[:notice] %>
</p>

<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
      <th>
        <h4>本のタイトル</h4>
      </th>
      <th>
        <h4>感想</h4>
      </th>
      <th></th>
    </tr>
  </thead>

 <tbody>

  <% @books.each do |book| %>
  <tr>
   <td>
    <span><%= book.title %></span>
   </td>

   <td>
    <span><%= book.body %></span>
   </td>

   <td>
    <%= link_to 'Show', book_path(book.id) %>
   </td>

   <td>
    <%= link_to 'Edit', edit_book_path(book.id) %>
   </td>

   <td>
    <%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
   </td>

  <% end %>

 </tbody>

</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーを発見しました

  <ul>
   <%= @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<%= form_with model: Book do |f| %>

  <div class="field">
    <label for="book_title">本のタイトル</label>
       <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_title">感想</label>
       <%= f.text_area :body %>
  </div>

  <div class="actions">
   <%= f.submit 'Create Book' %>
  </div>
<% end %>
